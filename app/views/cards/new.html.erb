<%= render "shared/second-header" %>


<%= form_with  url: cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
  <div class="Cardpage">
    <h1>カード登録</h1>
  </div><br>
  <div class='form-wrap'>
    <%= f.label :number, "【カード番号】" %>
    <%= f.text_field :card_number, class:"input-default",id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
  </div>
  <div class='form-wrap'>
    <%= f.label :cvc ,"【ＣＶＣ】" %>
    <%= f.text_field :card_cvc, class:"input-default",id:"card-cvc", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
  </div>
  <div class='form-wrap'>
  <br>
    <p>【有効期限】</p>
    <div class='input-expiration-date-wrap'>
      <%= f.select :card_exp_month, 1..12, {include_blank: "---"}, class: "input-expiration-date",id:"card-exp-month" %>
      <p>月</p>
      <%= f.select :card_exp_year, 20..25, {include_blank: "---"}, class: "input-expiration-date",id:"card-exp-year" %>
      <p>年</p>
    </div>
  </div>
  <%= f.submit "登録する" , class:"button" %>
<% end %>

<%= render "shared/second-footer" %>